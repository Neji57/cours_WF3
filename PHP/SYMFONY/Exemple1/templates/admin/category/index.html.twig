{% extends 'base.html.twig' %}
{% block body %}

{% embed 'decorator/_card.html.twig' %}

{% block header %}
{{ 'category.list'|trans }}
{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_category_new') }}" class="btn btn-success float-right"><i class="fa fa-plus"></i> {{ 'add'|trans }}</a>
{% endblock %}

{% block table %}
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>{{ "category.name"|trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-secondary" href="{{ path('app_admin_category_edit', {'id' : entity.id}) }}" ><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger" href="{{ path('app_admin_category_delete', {'id' : entity.id}) }}" ><i class="fa fa-trash"></i></a>
                    </div>

                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block footer %}
<div class="float-left">
{{ entities.iterator|length}}/{{ entities|length }} {{ 'category.count'|transchoice(entities|length) }}
</div>
<div class="float-right">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="{{ path('app_admin_category_index') }}"><i class="fa fa-fast-backward"></i></a></li>
            {% for p in 1..nbPages %}
            <li class="page-item {% if p == page %}{{ 'active' }}{% endif %}"><a class="page-link" href="{{ path('app_admin_category_index', {'page': p}) }}">{{ p }}</a></li>
            {% endfor %}
            <li class="page-item"><a class="page-link" href="{{ path('app_admin_category_index', {'page': nbPages}) }}"><i class="fa fa-fast-forward"></i></a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% endembed %}
{% endblock %}