{% extends 'base.html.twig' %} {% block body %} {% embed 'decorator/_card.html.twig' %} {% block header %} Liste des articles
{% endblock %} {% block body %}
<a class="btn btn-success float-right" href="{{ path('app_admin_article_new') }}" role="button"><i class="fa fa-plus"></i> {{ 'add' | trans }}</a>
{% endblock %} {% block table %}
<table class="table">
	<thead class="thead-dark">
		<tr>
			<th>Titre</th>
			<th>Date ajout</th>
			<th>Date modif.</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{% for entity in entities %}
		<tr>
			<td>{{ entity.title }}</td>
			<td>{{ entity.dateCreate|date('d/m/Y H:i') }}</td>
			<td>{{ entity.dateUpdate|date('d/m/y H:i') }}</td>
			<div class="btn-group">
				<td>
					<a href="{{ path('app_admin_article_edit', { 'id': entity.id }) }}" class="btn btn-secondary"><i class="fas fa-edit"></i> Editer</a>
					<a href="{{ path('app_admin_article_delete', { 'id': entity.id }) }}" class="btn btn-danger"><i class="fas fa-trash"></i> supprimer</a>
				</td>
			</div>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock %} {# block table #} {% block footer %}
<div class="float-left">
	{{ entities.iterator|length }}/{{ entities|length }} Article(s)
</div>

<div class="float-right">
	<nav aria-label="Page navigation example">
		<ul class="pagination">
			<li class="page-item">
				<a class="page-link" href="{{ path('app_admin_article_index') }}"><i class="fas fa-hand-point-left"></i></a>
			</li>
			{% for p in 1..nbPages %}
			<li class="page-item {% if p == page %}{{ 'active' }}{% endif %}">
				<a class="page-link" href="{{ path('app_admin_article_index', { 'page': p }) }}">{{ p }}</a>
			</li>
			{% endfor %}
			<li class="page-item">
				<a class="page-link" href="{{ path('app_admin_article_index', { 'page': nbPages }) }}"><i class="fas fa-hand-point-right"></i></a>
			</li>
		</ul>
	</nav>
</div>

{% endblock %} {% endembed %} {# embed 'decorator/_card.html.twig' #} {% endblock %}{# block body #}